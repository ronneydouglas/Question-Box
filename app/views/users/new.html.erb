<h1>Create an Account</h1>
<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :email %>
  <%= f.text_field :email %><br>

  <%= f.label :password %>
  <%= f.password_field :password %><br>

  <%= f.label :confirm_password %>
  <%= f.password_field :confirm_password %><br>

  <%= f.submit %>
<% end %>
