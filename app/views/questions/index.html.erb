<h1>Something on your mind???</h1>

<%= link_to "Ask a Question", new_question_path %>
<hr />

<% @questions.each do |question| %>
<h1><%= link_to question.title, question %></h1>

<p>
   <%= markdown(question.body) %>
</p>

<h5>Created <%= time_ago_in_words question.created_at %> ago</h5>

<% if question != @questions.last %>
<hr />

<% end %>
<% end %>
